#!/bin/bash
# Script that makes use of the Github CLI to update all of the addwiki repository descriptions at once

## Active Repositories
# Libraries
gh api --method PATCH repos/addwiki/addwiki --field description='Monorepo containing all addwiki libraries, packages and applications'
gh api --method PATCH repos/addwiki/mediawiki-datamodel --field description='Library with classes representing the MediaWiki datamodel'
gh api --method PATCH repos/addwiki/mediawiki-api-base --field description='Basic Library, using Guzzle, for interacting with the Mediawiki API'
gh api --method PATCH repos/addwiki/mediawiki-api --field description='Library with services for interacting with the Mediawiki API'
gh api --method PATCH repos/addwiki/wikibase-api --field description='Library with services for interacting with the Wikibase API'
gh api --method PATCH repos/addwiki/mediawiki-sitematrix-api --field description='Library for interacting with the SiteMatrix extension'
gh api --method PATCH repos/addwiki/mediawiki-flow-api --field description='Library for interacting with the Flow extension'
# CLI stuff
gh api --method PATCH repos/addwiki/addwiki-cli --field description='PHP CLI tool making use of the addwiki libraries and services'
gh api --method PATCH repos/addwiki/mediawiki-commands --field description='MediaWiki focused CLI commands, for use with addwiki-cli'
gh api --method PATCH repos/addwiki/wikibase-commands --field description='Wikibase focused CLI commands, for use with addwiki-cli'
gh api --method PATCH repos/addwiki/wikimedia-commands --field description='Wikimedia focused CLI commands, for use with addwiki-cli'
gh api --method PATCH repos/addwiki/wikimedia --field description='Convenience library for using addwiki code with Wikimedia projects'

## WIP Repositories
gh api --method PATCH repos/addwiki/mediawiki-db --field description='WIP library for interacting with a MediaWiki database'
gh api --method PATCH repos/addwiki/mediawiki-dump --field description='WIP library for interacting with a MediaWiki dumps'
gh api --method PATCH repos/addwiki/mediawiki-services --field description='WIP'

## Utility Repositories
gh api --method PATCH repos/addwiki/addwiki.github.io --field description='Github Pages Deployment for addwiki'


## Archived Repositories
#gh api --method PATCH repos/addwiki/readthedocs --field description='[ARCHIVED] Repo controlling the main readthedocs site'
#gh api --method PATCH repos/addwiki/guzzle-mediawiki-client --field description='[ARCHIVED] See mediawiki-api-base'
#gh api --method PATCH repos/addwiki/guzzle-mediawiki-client-generator --field description='[ARCHIVED] See mediawiki-api-base. Was used to generate a Guzzle Service Description for mediawiki'
